<div class="setions-container">

    <section class="article my-3">

        <div class="article__heading">
            <h1 class="h1"><%= article.title %></h1>
        </div>
        <hr>
        <div class="article__meta">
            <p class="article__meta__date">Published on <strong><%= article.createdAt.toDateString() %></strong></p>
            <p class="article__meta__author">By <strong><%= article.author %></strong></p>
        </div>
        <div class="article__image text-center">
            <img class="img-fluid" src="<%= article.image %>" alt="<%= article.title %>">
        </div>
        <div class="article__content my-3">
            <%- article.content %>
        </div>
    </section>
</div>